<div id="logreg-forms">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: 'form-signup') do |f| %>
    <%= devise_error_messages! %>

    <div class="form-group">
      <div class="input-group">
        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
        <%= f.text_field :name, autocomplete: "name", class: 'form-control', required: true, autofocus: true, placeholder: t('.name') %>
      </div>
    </div>
    
    <div class="form-group">
      <div class="input-group">
        <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
        <%= f.email_field :email, autocomplete: "email", class: 'form-control lowercase', required: true, onkeyup: "this.value = this.value.toLowerCase();", autofocus: true, placeholder: t('.email') %>
      </div>
    </div>

    <div class="form-group">
      <% if @minimum_password_length %>
        <em><%= t('.other', count: @minimum_password_length) %></em>
      <% end %><br />
      <div class="input-group">
        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
        <%= f.password_field :password, autocomplete: "new-password", class: 'form-control', required: true, placeholder: t('.password') %>
      </div>
    </div>

    <div class="form-group">
      <div class="input-group">
        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control', required: true, placeholder: t('.password_confirmation') %>
      </div>
    </div>

    <%= button_tag(type: 'submit', class: "btn btn-success btn-block") do %>
      <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span> <%= t('.sign_up') %>
    <% end %>

    <%= render "devise/shared/links" %>
  <% end %>
</div>